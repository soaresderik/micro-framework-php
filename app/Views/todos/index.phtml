  ?>
    <div class="col-md-12 pb-3">
      <div class="card">
        <div class="card-body">
          <?= $tarefas["title"] ?>
          <span class="badge badge-pill float-right badge-<?= $badge_class ?>"><?= $tarefas["status"] ?></span>
        </div>
      </div>
    </div>
  <?php endforeach; ?>
