<div class="mx-auto">
  <h1 class="text-center">Lista de Tarefas</h1>

  <?php foreach ($this->view["tarefas"] as $tarefas) :
    switch ($tarefas["status"]) {
      case "EM PROGRESSO":
        $badge_class = "info";
